<%#- 时间轴（Permalinks）在 md文章 里定义布局方式为layout: axis %>


        <a href="<%- url_for(page.path) %>">
            <div class="dearmsdan-title"> 
				<%= page.title %>
            </div>
        </a>
	
<div class="dearmsdan-post" id="axis">
 
            <% 
                var years = {};
                site.posts.sort('date').reverse().forEach(function(post){
                    var year = post.date.year()
                    if(years[year]===undefined){
                        years[year] = [];
                    }
                    years[year].push(post);
                });
            %>

	
	
	

<style>
	#history  li::before{
	content: "";
    width: 14px;
    height: 14px;
    background: #fff;
    display: inline-block;
    vertical-align: middle;
    margin-top: -2px;
    margin-right: 11px;
    border-radius: 100%;
    border: 3px solid rgb(41, 215, 255);
    z-index: 100;
    position: relative;
	}
	#history li::after {
    content: "";
    height: 100%;
    width: 2px;
    background: rgba(96, 195, 255, 0.48);
    position: absolute;
    left: 6px;
    top: 20px;
}
	#history  li{
	position: relative;
    padding: 10px 0;
    line-height: 24px;
	}
	#history #listul{
     /*display:block;*/
	}
	#history #listul:nth-child(2){
    /*display:block;*/
	}
	#history .content{
    position: relative;
    margin-left: 25px;
	}
	#history .title{
    margin-top: 22px;
	}
</style>
	
	

	  
<div id="history">
<% Object.keys(years).reverse().forEach(function(year){  %>
		<div class="title"><b><%= year %></b></div>
	<div id="listul">

		<ul>
            <% years[year].map(function(post){  %>
			<li>
				<div class="content">
					<div>
						<div>
							<span><%= post.date.format('MM-DD') %></span>
						</div>
					</div>
					

					<div >

						<div>
							<a href="<%- config.root %><%- post.path %>"><%- post.title || "Untitled" %></a>
						</div>

					</div>

				</div>

			</li>
                <% }) %>
		</ul>
	</div>
<% }) %>

</div>

</div>