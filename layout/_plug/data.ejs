<%#- 数据驱动 %>

<style>
	.navme>li>a:hover, .navme>li>a:focus, .navme>li>a.active{
    background-color: <%- theme.dearmsdanColorConfig.nav.bg %>;
    border-left: 5px solid <%- theme.dearmsdanColorConfig.nav.border %>;
	}
	.navme > li > div{
    background-color: <%- theme.dearmsdanColorConfig.nav2.bg %>;
	}
	.navme >li > div> ul> li:hover{
    background-color: <%- theme.dearmsdanColorConfig.nav2.hover %>!important
	}
</style>

<script type="text/javascript"> 
<% if (theme.dearmsdanColorConfig.enable == true ){ %>
// 超链接 enable
$('a').css('color','<%- theme.dearmsdanColorConfig.a %>');
// 导航栏
$('.navbar-default').css('background-color','<%- theme.dearmsdanColorConfig.navbar %>');
// 侧边栏
$('#dearmsdan .sidebar').css('background-color','<%- theme.dearmsdanColorConfig.sidebar %>');
$('#dearmsdan .sidebar').css('box-shadow','-20px 0px 20px 15px <%- theme.dearmsdanColorConfig.sidebarbox %>');
// 一级导航
$('.nav').addClass('navme');
// bg
$('.dearmsdan-bg').css('background-color','<%- theme.dearmsdanColorConfig.bg %>');
<% } %>	
	
	
	
	function dearmsdanfooter() {
	//https://img.xjh.me/random_img.php?type=bg&ctype=nature&return=302
	/* 设置 背景 */
	<% if (theme.background.verification == '' ){ %>
		$(".dearmsdan-bg").css("background-image","url('<%- theme.background.bg  %>')");
		$(".dearmsdan-bg").css("opacity","<%- theme.background.op  %>");
	<% } %>
   }


   if (window.addEventListener) { window.addEventListener("load",dearmsdanfooter, false);} 
   else if (window.attachEvent) {window.attachEvent("onload",dearmsdanfooter); }
    else{ window.onload =dearmsdanfooter; }
     
</script>